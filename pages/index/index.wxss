.user-panel {
  width: 750rpx;
  height: 200rpx;
  padding: 30rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
  box-shadow: 0 0 2rpx rgba(0, 0, 0, 0.15);
}

.user-panel > .user-panel-left {
  float: left;
  width: 170rpx;
  height: 140rpx;
}
.user-panel > .user-panel-right {
  float: right;
  width: 520rpx;
  height: 140rpx;
}
.user-avatar {
  float: left;
  width: 140rpx;
  height: 140rpx;
}
.user-name {
  float: left;
  height: 60rpx;
  margin: 40rpx 0;
  font-size: 40rpx;
  font-weight: 600;
  line-height: 60rpx;
  margin-right: 10rpx;
}
.user-sex {
  float: left;
  height: 60rpx;
  margin: 40rpx 0;
  margin-right: 10rpx;
}
.user-sex-icon {
  width: 60rpx;
  height: 60rpx;
}